@model User
@{
  ViewData["Title"] = "Sign Up";
}

<div class="container">
  <div class="auth-img">
    <img src="~/img/auth-side-image.png">
  </div>

  <form class="auth-form">
    <div class="title">Sign Up</div>
    <div class="registration-message">If you already have an account
      <a class="registration-link" asp-action="signin" asp-controller="account">Login here!</a>
    </div>

    <div class="input-form mb-5">
      <p class="input-title mt-5">Email</p>
      <input class="mb-4" type="email" id="emailForm" placeholder="Enter your email address">
      <p class="input-title">Username</p>
      <input class="mb-4" type="text" id="usernameForm" placeholder="Enter your username">
      <p class="input-title">Phone Number</p>
      <input class="mb-4" type="text" id="phoneNumberForm" placeholder="Enter your phone number">
      <p class="input-title">Password</p>
      <input class="mb-4" type="password" id="passwordForm" placeholder="Enter your password">
      <p class="input-title">Confirm Password</p>
      <input class="mb-2" type="password" id="confirmPasswordForm" placeholder="Confirm your password">
    </div>
    <div class="mt-5">
      <button type="submit" id="registerBtn" class="submit-btn">Register</button>
    </div>
    
    @*
    <div class="auth-img-right">
      <img src="~/img/balloon.png">
    </div>
    *@
  </form>
</div>