@{
    ViewData["Title"] = "Sign In";
}

<div class="container">
    <div class="auth-img">
        <img src="~/img/botan.png">
    </div>

    <form method="post" class="auth-form">
        <div class="title">Sign In</div>
        <div class="registration-message">If you don't have an account register You can
            <a class="registration-link" asp-action="register" asp-controller="account">Register now!</a>
        </div>

        <div class="input-form mt-5">
            <label class="input-title">Username</label>
            <input class="email-form mb-5" type="text" name="username" id="usernameLogin"
                placeholder="Enter your username">
            <label class="input-title">Password</label>
            <input class="password-form" type="password" name="password" id="passwordLogin"
                placeholder="Enter your Password">
        </div>
        <input type="checkbox" checked><span class="checkbox-text">Remember me!</span>
        <div class="mt-5">
            <button type="submit" id="submitButton" class="submit-btn">Login</button>
        </div>
    </form>
</div>