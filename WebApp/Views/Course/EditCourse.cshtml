@model Course
@{
    ViewData["Title"] = "Edit Course";
}

<h2>Edit Course</h2>

<form method="post">
    <input type="hidden" asp-for="Id" value="@Model.Id" />
    <input type="hidden" asp-for="CreatorId" value="@Model.CreatorId" />
    
    @for (int i = 0; i < Model.LessonIds.Count(); i++)
    {
        <input type="hidden" asp-for="LessonIds[i]" value="@Model.LessonIds[i]" />
    }
    
    <div class="form-group">
        <label asp-for="CourseName">Title</label>
        <input type="text" class="form-control" asp-for="CourseName" value="@Model.CourseName" required>
    </div>
    <div class="form-group">
        <label asp-for="CourseDescription">Description</label>
        <textarea class="form-control" asp-for="CourseDescription" required>@Model.CourseDescription</textarea>
    </div>
    <div class="form-group">
        <label asp-for="CourseAccess">Access</label>
        <select class="form-control" asp-for="CourseAccess" required>
            <option value="">Select Access</option>
            <option value="Free" selected>Free</option>
            <option value="Paid">Paid</option>
        </select>
    </div>
    <div class="form-group">
        <label asp-for="CourseCategory">Category</label>
        <select class="form-control" asp-for="CourseCategory" required>
            <option value="">Select Category</option>
            @foreach (var category in ViewBag.Categories)
            {
                if (category == Model.CourseCategory)
                {
                    <option value="@category" selected>@category</option>
                }
                else
                {
                    <option value="@category">@category</option>
                }
            }
        </select>
    </div>
    <div class="form-group">
        <label asp-for="CourseLanguage">Language</label>
        <select class="form-control" asp-for="CourseLanguage" required>
            <option value="">Select Language</option>
            @foreach (var language in ViewBag.Languages)
            {
                if (language == Model.CourseLanguage)
                {
                    <option value="@language" selected>@language</option>
                }
                else
                {
                    <option value="@language">@language</option>
                }
            }
        </select>
    </div>
    <div class="form-group">
        <label asp-for="CourseImage">Course Image URL</label>
        <input type="text" class="form-control" asp-for="CourseImage" value="@Model.CourseImage" required>
    </div>
    
    <button type="submit" class="btn btn-primary">Update</button>
</form>