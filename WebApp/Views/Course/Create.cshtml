@using Microsoft.AspNetCore.Mvc.TagHelpers
@model Course
@{
    ViewData["Title"] = "Create Course";
}

<h2>Create Course</h2>

<form id="courseForm" asp-action="Create" method="post">
    <div class="form-group">
        <label for="title">Title</label>
        <input type="text" class="form-control" id="title" asp-for="CourseName" required>
    </div>
    <div class="form-group">
        <label for="description">Description</label>
        <textarea class="form-control" id="description" asp-for="CourseDescription" required></textarea>
    </div>
    <div class="form-group">
        <label for="access">Access</label>
        <select class="form-control" id="access" asp-for="CourseAccess" required>
            <option value="">Select Access</option>
            <option value="Free">Free</option>
            <option value="Paid">Paid</option>
        </select>
    </div>
    <div class="form-group" id="priceField" style="display: none;">
        <label for="price">Price</label>
        <input type="number" class="form-control" id="price" asp-for="CoursePrice">
    </div>
    <div class="form-group">
        <label for="category">Category</label>
        <select class="form-control" id="category" asp-for="CourseCategory" required>
            <option value="">Select Category</option>
            @foreach (var category in ViewBag.Categories)
            {
                <option value="@category">@category</option>
            }
        </select>
    </div>
<div class="form-group">
    <label for="difficulty">Difficulty</label>
    <input type="range" class="form-control-range" id="difficulty" name="difficulty" min="1" max="5" step="1" asp-for="CourseDifficulty" required>
    <label id="difficultyLabel"></label>
</div>
    <div class="form-group">
        <label for="language">Language</label>
        <select class="form-control" id="language" asp-for="CourseLanguage" required>
            <option value="">Select Language</option>
            @foreach (var language in ViewBag.Languages)
            {
                <option value="@language">@language</option>
            }
        </select>
    </div>
    <div class="form-group">
        <label for="image">Course Image URL</label>
        <input type="text" class="form-control" id="image" asp-for="CourseImage" required>
    </div>
    
    <!-- Add Lesson Button -->
    <button id="addLessonBtn" class="btn btn-primary">Add Lesson</button>
    
    <!-- Lesson Container -->
    <div id="lessonContainer"></div>
    
    <button type="submit" class="btn btn-primary">Create</button>
</form>

<script src="~/js/course-settings.js" asp-append-version="true"></script>