@{
    ViewData["Title"] = "Dashboard";
}

<div class="dashboard">
    <h1 class="main-text">In the last 30 days,</h1>

    <div class="info-boxes">
        <div class="info-box">
            <h2>Sales</h2>
            <p>@ViewData["Sales"]</p>
        </div>
        <div class="info-box">
            <h2>New Creators</h2>
            <p>@ViewData["NewCreators"]</p>
        </div>
        <div class="info-box">
            <h2>Revenue Generated</h2>
            <p>@ViewData["Revenue"]</p>
        </div>
    </div>

    <div class="boxes-row">
    <div class="creator-box">
        <h2>Best Selling Creators</h2>
        @model List<User>
        <div class="table">
            @foreach (var user in Model)
            {
                <div class="table-row">
                    <div class="table-cell username">@user.Username</div>
                    <div class="table-cell">@user.Sales sales</div>
                    <div class="table-cell">$@user.RevenueGenerated revenue</div>
                </div>
            }
        </div>
        <a class="show-all-items" href="/creators">View All Creators</a>
    </div>
    
    <div class="course-box">
        <h2>Best Selling Courses</h2>
        <!-- Course data goes here -->
        <div style="margin-bottom: 35vh;"></div>
            <a class="show-all-items" href="/courses">View All Courses</a>
    </div>
</div>
</div>