@using System.Security.Claims
@using Microsoft.AspNetCore.Mvc.TagHelpers
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Admin Panel</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="~/css/admin.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/admin-navbar.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/admin-sidebar.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/admin-dahsboard.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/admin-users.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
   
</head>

<body>
    <header class="header">
        <div class="left-section">
            <a class="home-link" href="@Url.Action("Index", "Home")">
                <img class="iShariu-logo" src="~/ballon.ico">
                <p class="project-name">ЯШарю</p>
            </a>
        </div>

    <div class="middle-section">
        <form class="form-inline my-2 my-lg-0" method="get" action="@Url.Action("Search", "Home")">
            <div class="input-group">
                <div class="input-group-prepend">
                    <button class="btn btn-outline-secondary" type="submit">
                        <i class="fas fa-search"></i>
                    </button>
                </div>
                <input class="form-control mr-sm-2" type="search" placeholder="Search creators, courses" aria-label="Search" style="width: 500px;">
            </div>
        </form>
    </div>

    <div class="right-section"></div>
</header>
                

    <div class="container">
        <div class="row">
            <div class="col-md-3">
                <div class="list-group">
                    <a href="@Url.Action("Index", "Admin")" class="list-group-item list-group-item-action @(ViewContext.RouteData.Values["Controller"].ToString() == "Admin" && ViewContext.RouteData.Values["Action"].ToString() == "Index" ? "active-link" : "")">
                        <i class="fas fa-tachometer-alt"></i> Dashboard
                    </a>
                    <a href="@Url.Action("Users", "Admin")" class="list-group-item list-group-item-action @(ViewContext.RouteData.Values["Controller"].ToString() == "Admin" && ViewContext.RouteData.Values["Action"].ToString() == "Users" ? "active-link" : "")">
                        <i class="fas fa-users"></i> Users
                    </a>
                    <a href="@Url.Action("Courses", "Admin")" class="list-group-item list-group-item-action @(ViewContext.RouteData.Values["Controller"].ToString() == "Admin" && ViewContext.RouteData.Values["Action"].ToString() == "Courses" ? "active-link" : "")">
                        <i class="fas fa-book"></i> Courses
                    </a>
                    <a href="@Url.Action("Sales", "Admin")" class="list-group-item list-group-item-action @(ViewContext.RouteData.Values["Controller"].ToString() == "Admin" && ViewContext.RouteData.Values["Action"].ToString() == "Sales" ? "active-link" : "")">
                        <i class="fas fa-chart-line"></i> Sales
                    </a>
                    <a href="@Url.Action("Settings", "Admin")" class="list-group-item list-group-item-action @(ViewContext.RouteData.Values["Controller"].ToString() == "Admin" && ViewContext.RouteData.Values["Action"].ToString() == "Settings" ? "active-link" : "")">
                        <i class="fas fa-cogs"></i> Settings
                    </a>
                    <div style="height: 50vh;"></div>
                    <a asp-action="logout" asp-controller="account" class="list-group-item list-group-item-action logout-button">
                        <i class="fas fa-sign-out-alt"></i> Log out
                    </a>
                </div>
            </div>

            <div class="col-md-9">
                @RenderBody()
            </div>
        </div>

    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>